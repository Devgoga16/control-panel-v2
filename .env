# Configuración del Panel de Control
# Variables de entorno para el frontend

# URL del Backend API (usando proxy de Vite)
# En desarrollo, Vite hará proxy a http://localhost:3001/api
# Para producción, cambiar por la URL completa del servidor
VITE_API_BASE_URL=https://control-panel-api-v2.onrender.com/api

# Alias de la aplicación (debe coincidir con el backend)
# Usa "admin" para coincidir con tu backend actual
VITE_APP_ALIAS=admin

# Modo desarrollo para ver logs detallados
VITE_DEV_MODE=true

# Nombre de la aplicación (para mostrar en la UI)
VITE_APP_NAME=Control Panel

# Modo de desarrollo (habilita logs y funciones de debug)
VITE_DEV_MODE=true

# Tiempo de expiración del token en milisegundos (opcional)
VITE_TOKEN_EXPIRY=3600000

# Configuraciones adicionales
VITE_APP_VERSION=1.0.0
